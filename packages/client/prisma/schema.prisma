generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Airplane {
  id         String    @id
  waypointId String?   @unique
  create_at  DateTime  @default(now())
  Waypoint   Waypoint? @relation(fields: [waypointId], references: [id])
}

model ILS {
  id       String     @id
  code     String     @unique
  Waypoint Waypoint[]
}

model Messege {
  id      String   @id
  from    String
  to      String?
  content String
  sent_at DateTime @default(now())
}

model SID {
  id       String     @id
  code     String     @unique
  Waypoint Waypoint[]
}

model Waypoint {
  id       String    @id
  name     String    @unique
  iLSId    String?
  sIDId    String?
  ILS      ILS?      @relation(fields: [iLSId], references: [id])
  SID      SID?      @relation(fields: [sIDId], references: [id])
  Airplane Airplane?
}
