// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Waypoint {
  id       String    @id @default(uuid())
  name     String    @unique
  Airpalne Airplane?
  ILS      ILS?      @relation(fields: [iLSId], references: [id])
  iLSId    String?
  SID      SID?      @relation(fields: [sIDId], references: [id])
  sIDId    String?
}

model ILS {
  id                 String     @id @default(uuid())
  code               String     @unique
  waypoints_by_order Waypoint[]
}

model SID {
  id                 String     @id @default(uuid())
  code               String     @unique
  waypoints_by_order Waypoint[]
}

model Airplane {
  id         String    @id @default(uuid())
  Waypoint   Waypoint? @relation(fields: [waypointId], references: [id])
  waypointId String?
  create_at  DateTime  @default(now())
}

model Messege {
  id      String   @id @default(uuid())
  from    String
  to      String?
  content String
  sent_at DateTime @default(now()) @updatedAt
}
