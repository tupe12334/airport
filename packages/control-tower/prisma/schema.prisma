generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Airport {
  country     String
  name        String
  controllers Controller[]
  Ground      Ground[]

  @@id([country, name])
}

model Waypoint {
  id                    String     @id @default(uuid())
  name                  String     @unique
  iLSId                 String?
  sIDId                 String?
  groundId              String?
  Ground                Ground?    @relation(fields: [groundId], references: [id])
  ILS                   ILS?       @relation(fields: [iLSId], references: [id])
  SID                   SID?       @relation(fields: [sIDId], references: [id])
  Airpalne              Airplane?
  controller            Controller @relation(fields: [controllerAirportName, controllerName], references: [airportName, Name])
  controllerAirportName String
  controllerName        String
}

model ILS {
  id                 String     @id @default(uuid())
  code               String     @unique
  waypoints_by_order Waypoint[]
}

model Controller {
  RF             RF
  airportCountry String
  airportName    String
  Name           String
  Airport        Airport @relation(fields: [airportCountry, airportName], references: [country, name])

  @@id([airportName, Name])
  @@unique([airportCountry, airportName, RF], name: "Controller.airportCountry_airportName_RF_unique")
  Waypoint Waypoint[]
}

model SID {
  id                 String     @id @default(uuid())
  code               String     @unique
  waypoints_by_order Waypoint[]
}

model Ground {
  id             String     @id @default(uuid())
  airportCountry String
  airportName    String
  airport        Airport    @relation(fields: [airportCountry, airportName], references: [country, name])
  waypoints      Waypoint[]
}

model Airplane {
  id         String    @id @default(uuid())
  waypointId String?   @unique
  create_at  DateTime  @default(now())
  Waypoint   Waypoint? @relation(fields: [waypointId], references: [id])
}

model Message {
  id      String   @id
  from    String
  to      String?
  content String
  sent_at DateTime @default(now())
  rf      RF
}

enum RF {
  F120D5
  F121D4
  F134D6
}
