datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Waypoint {
  id       String    @id @default(uuid())
  name     String    @unique
  Airpalne Airplane?


}

model Airplane {
  id         String    @id @default(uuid())
  Waypoint   Waypoint? @relation(fields: [waypointId], references: [id])
  waypointId String?
}

model Messege {
  id      String   @id @default(uuid())
  from    String
  to      String?
  content String
  sent_at DateTime @default(now()) @updatedAt
}
